<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="article-display text-center">
                <a href="{{singleArticle.link}}" target="_blank">{{singleArticle.title}}</a>
                <br>
                {{#if singleArticle.userComment}}
                <br>
                <h4 class="text-center">Comment:</h4>
                <div>
                    <div class="text-center"><strong>Name: </strong>{{singleArticle.userComment.name}}</div>
                    <div class="text-center"><strong>Comment: </strong>{{singleArticle.userComment.body}}</div>
                </div>
                <br><br>
                {{/if}}
                <h3>Update the Comment:</h3>
                <input type="text" class="name" placeholder="Your Name">
                <br>
                <textarea class="userComment" placeholder="Your Comment"></textarea>
                <br>
                <button class="btn btn-success btn-sm write-comment" data-id="{{singleArticle.id}}">
                    Comment
                </button>
            </div>
            <a href="/">
                <button class="btn btn-secondary">Back To Home</button>
            </a>
        </div>
        <div class="col-2"></div>
    </div>
</div>

<script src="/js/app.js"></script>